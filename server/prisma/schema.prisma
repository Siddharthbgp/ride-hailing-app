generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Driver {
  id        String   @id @default(uuid())
  name      String
  status    String   @default("offline") // online, busy, offline
  lat       Float?
  lng       Float?
  rides     Ride[]
  createdAt DateTime @default(now())
  
  @@index([status])
  @@index([lat, lng])
}

model Ride {
  id             String    @id @default(uuid())
  riderId        String
  driverId       String?
  driver         Driver?   @relation(fields: [driverId], references: [id])
  status         String    @default("requested") // requested, assigned, started, paused, completed, cancelled
  tier           String    @default("economy") // economy, premium, luxury
  paymentMethod  String    @default("card") // card, cash, wallet
  pickupLat      Float
  pickupLng      Float
  destLat        Float
  destLng        Float
  price          Float
  surgeFactor    Float     @default(1.0)
  distance       Float?
  createdAt      DateTime  @default(now())
  startedAt      DateTime?
  pausedAt       DateTime?
  completedAt    DateTime?
  receipt        Receipt?
  
  @@index([status])
  @@index([driverId])
  @@index([riderId])
  @@index([createdAt])
}

model Receipt {
  id            String   @id @default(uuid())
  rideId        String   @unique
  ride          Ride     @relation(fields: [rideId], references: [id])
  baseFare      Float
  distanceFare  Float
  surgeFare     Float
  totalFare     Float
  paymentStatus String   @default("pending") // pending, completed, failed
  transactionId String?
  createdAt     DateTime @default(now())
  
  @@index([rideId])
}
